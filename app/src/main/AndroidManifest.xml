<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remon.retrofitexample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.remon.moviesapp.activity.activity.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.remon.moviesapp.activity.activity.MoviesDetails"
            android:parentActivityName="com.example.remon.moviesapp.activity.activity.MainActivity" />
        <activity android:name="com.example.remon.moviesapp.activity.activity.MainActivity"
            android:label="@string/app_name"
            >

        </activity>
    </application>

</manifest>